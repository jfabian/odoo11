<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_cancel_wizard_view" model="ir.ui.view">
        <field name="name">Invoice Cancel</field>
        <field name="model">invoice.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard to cancel Invoice">
                <group>
                    <field name="l10n_pe_cancel_reason"/>
                    <field name="l10n_pe_cancel_reason_strip" invisible="1"/>
                </group>
                <footer>
                    <button string="Cancel invoice" name="button_cancel_reason"  type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_invoice_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Invoice</field>
        <field name="res_model">invoice.cancel.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="invoice_cancel_wizard_view"/>
        <field name="target">new</field>
    </record>

</odoo>
