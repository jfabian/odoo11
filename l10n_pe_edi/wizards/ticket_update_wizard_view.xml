<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="summary_ticket_update_wizard_view" model="ir.ui.view">
        <field name="name">Ticket Update</field>
        <field name="model">ticket.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Wizard to update the ticket from a summary">
                <group>
                    <field name="l10n_pe_edi_ticket_numbers"/>
                </group>
                <footer>
                    <button string="Update ticket" name="button_update_ticket_number"  type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_ticket_update_wizard" model="ir.actions.act_window">
        <field name="name">New ticket update</field>
        <field name="res_model">ticket.update.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="summary_ticket_update_wizard_view"/>
        <field name="target">new</field>
    </record>
</odoo>
